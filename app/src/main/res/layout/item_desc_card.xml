<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_card"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_dashboard_black_24dp" />
            <TextView
                android:id="@+id/name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Диван  Wella "
                android:textSize="26sp"
                android:textStyle="bold" />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#AEF8A1">
            <TextView
                android:id="@+id/price_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="1250"
                android:textSize="26sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_dollars_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>
            <TextView
                android:id="@+id/description_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:text="Диван раскладной,пр-во Германии,
            размеры 2 x 1.5 длина:        mlmlmlmlmlmlmlmlmmlmlmnlmlnlmlnmlmlmlmlmlmlmlmlm
        lmlmlmlmlmllmlmlmlmllmlmlmllmlmllmlmlmll"
                android:textSize="20sp"
                android:visibility="visible" />    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>